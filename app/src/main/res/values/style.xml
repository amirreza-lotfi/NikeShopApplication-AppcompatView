<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="customNavigationBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_navigation_item_color</item>
        <item name="itemTextColor">@color/bottom_navigation_item_color</item>
        <item name="itemTextAppearanceActive">@style/bottomNavigationTextAppearanceItem</item>
        <item name="itemRippleColor">@color/bottom_navigation_item_ripple_color</item>
    </style>

    <style name="bottomNavigationTextAppearanceItem" parent="TextAppearance.ECommerceNikeStore.Caption">
        <item name="fontFamily">@font/primary_bold</item>
    </style>

    <style name="ECommerceNikeStore.AuthActivity.ButtonTheme" parent="ECommerceNikeStore.AuthActivity">
        <item name="backgroundTint">?colorOnBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
        <item name="fontFamily">@font/primary_bold</item>
    </style>

    <style name="CheckoutTextInputEditTextStyle" parent="Theme.ECommerceNikeStore">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CheckoutTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ECommerceNikeStore.AuthActivity.EditText" parent="ECommerceNikeStore.AuthActivity">
        <item name="android:background">@drawable/background_edit_text_auth</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textColorHint">#48ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>
</resources>