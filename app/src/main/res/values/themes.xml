<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ECommerceNikeStore" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q"> false </item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/primary_regular</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.ECommerceNikeStore.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.ECommerceNikeStore.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.ECommerceNikeStore.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.ECommerceNikeStore.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.ECommerceNikeStore.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.ECommerceNikeStore.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.ECommerceNikeStore.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.ECommerceNikeStore.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.ECommerceNikeStore.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.ECommerceNikeStore.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.ECommerceNikeStore.Overline</item>

        <item name="backgroundWindow">#f8f8f8</item>
        <item name="dividerColor">@color/gray</item>
        <item name="bottomNavigationStyle">@style/customNavigationBar</item>
    </style>

    <style name="ECommerceNikeStore.AuthActivity" parent="Theme.ECommerceNikeStore">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="materialButtonStyle">@style/ECommerceNikeStore.AuthActivity.ButtonTheme</item>
    </style>
</resources>