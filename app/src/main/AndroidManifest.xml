<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.amirreza.ecommercenikestore">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".di.NikeShopApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ECommerceNikeStore"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".OrderResultActivity"
            android:exported="false"
            android:label="@string/title_activity_order_result"
            android:theme="@style/Theme.ECommerceNikeStore.NoActionBar" />
        <activity
            android:name=".ReceiptActivity"
            android:exported="false"
            android:label="@string/title_activity_receipt"
            android:theme="@style/Theme.ECommerceNikeStore.NoActionBar" />
        <activity
            android:name=".feature_auth.presentation.AuthActivity"
            android:exported="false"
            android:theme="@style/ECommerceNikeStore.AuthActivity" />
        <activity
            android:name="com.amirreza.ecommercenikestore.feature_store.presentation.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".feature_cart.presentation.checkout_fragment.CheckoutFragment"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="nike" />
            </intent-filter>
        </activity>
    </application>

</manifest>